<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    tools:context="com.example.shivr.androidblogapp.PostActivity">

    <ImageButton
        android:id="@+id/insert_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/add_btn"
        android:layout_alignParentTop="true" />


    <EditText
        android:id="@+id/mpost_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/insert_image"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:background="@drawable/input_outline"
        android:padding="15dp"
        android:hint="Post Tilte..."
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/mpost_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mpost_title"
        android:layout_marginTop="37dp"
        android:hint="Post descr..."
        android:background="@drawable/input_outline"
        android:padding="15dp"
        android:ems="10"
        android:inputType="textMultiLine" />



    <Button
        android:id="@+id/sumbit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="@color/colorPrimary"
        android:text="submit"
        android:textColor="@color/white" />



</RelativeLayout>
