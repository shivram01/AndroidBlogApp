<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.shivr.androidblogapp.AccountActivity">

    <include
        android:id="@+id/users_account_setting"
        layout="@layout/app_bar_layout" />


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:src="@drawable/profile"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp" />


        <Button
            android:id="@+id/change_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_text"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorPrimary"
            android:text="Change Image" />

        <Button
            android:id="@+id/msubmit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/change_image"
            android:layout_alignLeft="@+id/change_image"
            android:layout_alignRight="@+id/change_image"
            android:layout_alignStart="@+id/change_image"
            android:layout_below="@+id/change_image"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:text="Submit" />

        <EditText
            android:id="@+id/user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:background="@drawable/input_outline"
            android:padding="10dp"
            android:hint="Enter Your Name"
            android:inputType="textPersonName" />
</RelativeLayout>
